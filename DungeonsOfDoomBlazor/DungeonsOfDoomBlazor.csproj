<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="GameEngine\Data\items.json" />
    <Content Remove="GameEngine\Data\locations.json" />
    <Content Remove="GameEngine\Data\merchants.json" />
    <Content Remove="GameEngine\Data\monsters.json" />
    <Content Remove="GameEngine\Data\quests.json" />
    <Content Remove="GameEngine\Data\recipes.json" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="GameEngine\Data\items.json" />
    <EmbeddedResource Include="GameEngine\Data\locations.json" />
    <EmbeddedResource Include="GameEngine\Data\merchants.json" />
    <EmbeddedResource Include="GameEngine\Data\monsters.json" />
    <EmbeddedResource Include="GameEngine\Data\quests.json" />
    <EmbeddedResource Include="GameEngine\Data\recipes.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Blazorise" Version="1.2.2" />
    <PackageReference Include="Blazorise.Bootstrap" Version="1.2.2" />
    <PackageReference Include="Blazorise.Icons.FontAwesome" Version="1.2.2" />
    <PackageReference Include="d20tek-dicenotation" Version="3.3.2" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.3" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="7.0.3" PrivateAssets="all" />
  </ItemGroup>

</Project>
